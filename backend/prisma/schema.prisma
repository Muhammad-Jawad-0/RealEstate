generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  username  String   @unique
  password  String
  avatar    String?
  createdAt DateTime @default(now())
}

model Post {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  price      Int
  img        String
  address    String
  city       String
  bedroom    Int
  bathroom   Int
  latitude   String
  longtitude String
  createdAt  DateTime @default(now())
}


enum Type{
  buy
  rent
}
enum property{
  buy
  rent
}